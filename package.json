{
  "name": "bastion-sea",
  "version": "1.0.0",
  "description": "GODTIDE: Bastion Sea - Island conquest game",
  "author": "Mert Akhan",
  "homepage": ".",
  "private": true,
  "main": "electron/main.js",
  "dependencies": {
    "framer-motion": "^12.34.0",
    "howler": "^2.2.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "zustand": "^5.0.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "electron .",
    "electron:build": "react-scripts build && electron-builder --win portable"
  },
  "build": {
    "extends": null,
    "appId": "com.godtide.bastionsea",
    "productName": "GODTIDE Bastion Sea",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "icon": "public/favicon.ico",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/howler": "^2.2.12",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.24",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  }
}
